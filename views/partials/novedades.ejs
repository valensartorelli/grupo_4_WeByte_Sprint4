<section>
    <div class="container novedades">
        <h2>Novedades</h2>
    </div>

    <div id="carouselExampleInterval" class="carousel slide multi-item-carousel" data-bs-ride="carousel">
        <div class="container">
            <div class="col">
                <div class="carousel-inner row w-100 mx-auto">
                    <div class="carousel-item active">
                        <% products.forEach(articulo => {%>
                            <div class="novedad d-sm-block">
                                <a href="/product/<%= articulo.id%>"> 
                                    <figure>
                                        <img src="/images/<%= articulo.image %>" alt="<%= articulo.name %>" class="d-block w-100" class="img-fluid">
                                    </figure>
                                    <div class="prod-info">
                                        <div class="section"><%= articulo.categoria %></div>
                                        <h4><%= articulo.name %></h4>
                                        <div class="precio">$<%= articulo.price %></div>
                                    </div>
                                </a>
                            </div>
                            
                        <% }) %>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</section>